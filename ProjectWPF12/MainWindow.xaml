<Window x:Class="ProjectWPF12.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectWPF12"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button ToolTip="I'm a tooltip! I'm useful" Width="150" Height="50" VerticalAlignment="Top">Hover for more info</Button>
        <TextBlock ToolTip="Please enter your age" Width="100" Height="100">Age</TextBlock>
        <TextBox Width="200" Height="50"></TextBox>
    </Grid>
</Window>
