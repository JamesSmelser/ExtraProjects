<Window x:Class="ProjectWPF15.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectWPF15"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="40">
        <Label FontSize="36" FontWeight="Bold" FontStyle="Italic" Foreground="DarkTurquoise" HorizontalAlignment="Center">iCompare</Label>
        <Label FontSize="12" Foreground="Black" HorizontalAlignment="Center">Your shopping solution</Label>
        <Label FontWeight="Bold" FontSize="16" HorizontalAlignment="Center">UserName</Label>
        <TextBox Name="tbUserName" MaxLength="20" FontSize="16" Width="300" HorizontalAlignment="Center"></TextBox>
        <Label FontWeight="Bold" FontSize="16" HorizontalAlignment="Center">Password</Label>
        <PasswordBox MaxLength="20" FontSize="16" Width="300" HorizontalAlignment="Center"></PasswordBox>
        <Button Margin="20" Content="LOGIN" Click="Button_Click" Width="100" FontWeight="Bold"/>
    </StackPanel>
</Window>
